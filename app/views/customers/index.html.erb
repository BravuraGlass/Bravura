<h3>Customers
  <small>List of existing customers</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <small></small>
        </div>
        <div class="panel-body">
          <div class="errors_panel">
            <% if flash[:notice] %>
              <div class="notice"><%= flash[:notice] %></div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert"><%= flash[:alert] %></div>
            <% end %>
          </div>
          <table class="datatable table table-striped table-hover responsive">
            <thead>
              <tr>
                <th class="sort-alpha">Contact firstname</th>
                <th class="sort-alpha">Contact lastname</th>
                <th class="sort-alpha">Company name</th>
                <th class="no-sort">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td>
                    <%= customer.contact_firstname %>
                  </td>
                  <td>
                    <%= customer.contact_lastname %>
                  </td>
                  <td>
                    <%= customer.company_name %>
                  </td>
                  <td>
                    <%= link_to 'Show',
                                        customer_path(customer), :class => 'btn btn-default btn-xs' %>
                      <%= link_to 'Edit',
                                        edit_customer_path(customer, scroll: ''), :class => 'btn btn-default btn-xs' %>
                        <%= link_to 'Delete',
                                        customer_path(customer),
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure you want to delete the customer? This will also delete all Jobs and PO associated to the Customer' },
                                        :class => 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<%= link_to 'New Customer',
            new_customer_path,
            :class => 'btn btn-primary' %>
