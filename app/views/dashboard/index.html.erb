<h3>Dashboard
  <small>List of Statuses</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          Product Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @sections.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <td><%= link_to "detail", sections_detail_dashboard_index_path(status: key) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <div class="panel-body">
          Fabrication Order Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @forders.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <td><%= link_to "detail", forders_detail_dashboard_index_path(status: key) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <div class="panel-body">
          Job Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @jobs.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <td><%= link_to "detail", jobs_detail_dashboard_index_path(status: key) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
      </div>
    </div>
  </div>
</div>