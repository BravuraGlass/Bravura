<h3>Dashboard
  <small>List of Statuses</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render :partial => 'shared/flash_messages' %>
          <%= render 'shared/search_address', 
                      job_adresses: @job_adresses, 
                      action_search: dashboard_index_path %>
          Material Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <% if current_user.admin? %>
                  <th>Action</th>
                <% end %>  
              </tr>
            </thead>
            <tbody>
              <% @sections.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <td><%= link_to "detail", sections_detail_dashboard_index_path(status: key, job_id: params[:job_id]) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <% if current_user.type_of_user != USER_TYPE[:field_worker] %>
        <div class="panel-body">
          Fabrication Order Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <% if current_user.admin? %>
                  <th>Action</th>
                <% end %>  
              </tr>
            </thead>
            <tbody>
              <% @forders.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <% if current_user.admin? %>
                  <td><%= link_to "detail", forders_detail_dashboard_index_path(status: key, job_id: params[:job_id]) %></td>
                <% end %>  
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <div class="panel-body">
          Job Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <% if current_user.admin? %>
                  <th>Action</th>
                <% end %>  
              </tr>
            </thead>
            <tbody>
              <% @jobs.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <% if current_user.admin? %>
                  <td><%= link_to "detail", jobs_detail_dashboard_index_path(status: key, job_id: params[:job_id]) %></td>
                <% end %>  
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="panel-body">
          Room Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <% if current_user.admin? %>
                  <th>Action</th>
                <% end %>  
              </tr>
            </thead>
            <tbody>
              <% @rooms.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <% if current_user.admin? %>
                  <td><%= link_to "detail", rooms_detail_dashboard_index_path(status: key, job_id: params[:job_id]) %></td>
                <% end %>  
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="panel-body">
          Task Statuses
          <table class="table table-striped table-hover responsive">
            <thead>
              <tr>
                <th style="width:25%" class="sort-alpha">Status</th>
                <th style="width:25%" class="sort-alpha">Amount</th>
                <% if current_user.admin? %>
                  <th>Action</th>
                <% end %>  
              </tr>
            </thead>
            <tbody>
              <% @products.each do |key, value| %>
              <tr>
                <td style="width:25%"><%= key %></td>
                <td style="width:25%"><%= value %></td>
                <% if current_user.admin? %>
                  <td><%= link_to "detail", products_detail_dashboard_index_path(status: key, job_id: params[:job_id]) %></td>
                <% end %>  
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>