<div id="cloneMasterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
      <div class="modal-content">
        
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 id="myModalLabel" class="modal-title">Clone From Master</h4>
        </div>
        
        <% if options_for_master(@fabrication_order).size > 0 %>
          <div class="modal-body">
          
            <%= hidden_field_tag "master_fabrication_order_id", @fabrication_order.id %>
            <div class="form-group">
              <label>Pick Master Data</label>
              <%= select_tag "master_room_id", options_for_master(@fabrication_order)%>
            </div>
  
          </div>
          <div class="modal-footer">
            <button type="button" id="masterModalCloneButton" class="btn btn-primary">Clone</button>
          </div>  
        <% else %>
          <div class="modal-body">
            <center>Master data is not exist, please create it first from edit room menu</center>
          </div>  
        <% end %>
      </div>
  </div>
</div>
