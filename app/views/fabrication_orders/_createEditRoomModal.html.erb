<div id="createEditRoomModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 id="myModalLabel" class="modal-title">Create Products</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <label for="room">Select Room</label>
              <%= collection_select :product, :room_id, @fabrication_order.rooms, :id, :name, { include_blank: true } , { class: 'form-control select-bootstrap' } %>
              <%= text_field :product, :room_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="room">Product Type</label>
              <%= collection_select :product, :product_type_id, @product_types, :id, :name, { include_blank: false } , { class: 'form-control select-bootstrap' } %>
            </div>
            <div class="form-group">
              <label for="product[name]">Product Name</label>
              <%= text_field :product, :name, class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <label for="room">Number of Sections</label>
              <%= number_field :room, :sections, class: "form-control", min: "1", max: "100", required: true%>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="createEditProductModalCancelButton" data-dismiss="modal" class="btn btn-default">Cancel</button>
          <button type="submit" id="createEditProductModalSaveButton" class="btn btn-primary">Create</button>
        </div>
      </div>
  </div>
</div>
