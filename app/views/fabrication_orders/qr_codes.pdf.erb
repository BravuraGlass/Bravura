<html>
<head>
  <meta charset="utf-8">
  <title>QRCodes</title>
</head>
<body>
  <h1>QR CODES</h1>

  <style media="screen">
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }
  table, tr, td, th, tbody, thead, tfoot {
    page-break-inside: avoid;
  }

  td {
    border-left: solid 5px #000;
    padding: 0;
    margin: 0;
    width: 0px;
    height: 5px;
  }
  td.black { border-color: #000; }
  td.white { border-color: #fff; }
  </style>


  <div class="container">
    <div class="row">
      <% @qrs.each do |qr| %>
      <div class="col-md-6">
        <p><%= qr[0] %></p>
        <div class="tabla">
          <%= raw qr[1].as_html %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</body>
</html>
