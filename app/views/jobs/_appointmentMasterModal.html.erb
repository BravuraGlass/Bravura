<div id="appointmentMasterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
      <div class="modal-content">
        
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 id="myModalLabel" class="modal-title"></h4>
        </div>
        
          <div class="modal-body">
          
            <%= hidden_field_tag "job_id", "" %>
            <div class="form-group">
              <label>Datetime</label>
              <%= date_field_tag "date_appointment", "", class: "date_appointment", style: 'display:inline !important; width: 150px;' %>
              <%= time_field_tag "time_appointment", "", class: "time_appointment" %>                        
            </div>
  
          </div>
          <div class="modal-footer">
            <button type="button" id="appointmentModalSaveButton" class="btn btn-primary">Save</button>
          </div>  

      </div>
  </div>
</div>
