<div id="productDetailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 id="myModalLabel" class="modal-title">Change/Delete Statuse</h4>
        </div>
        <div class="modal-body">
            <%# hidden_field :product, :fabrication_order_id, value: @fabrication_order.id, id: 'fabrication_order_id' %>
            <div class="form-group">
              <label for="room">Select or Create Room</label>
              <div class="row">
                <div class="col-md-6">
                  <%# collection_select :product, :room_id, @fabrication_order.rooms, :id, :name_with_master, { include_blank: true } , { class: 'form-control select-bootstrap' } %>
                </div>
                <div class="col-md-6">
                  <%# text_field :product, :room_name, class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="product[product_type_id]">Product Type</label>
              <%# collection_select :product, :product_type_id, @product_types, :id, :name, { include_blank: false } , { class: 'form-control select-bootstrap' } %>
            </div>
            <div class="form-group">
              <label for="product[name]">Product Name</label>
              <%# text_field :product, :name, class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <label for="product[sections]">Number of Sections</label>
              <%# number_field :product, :sections, class: "form-control", min: "1", max: "100", required: true %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" id="productDetailModalSaveButton" class="btn btn-primary">Create</button>
        </div>
      </div>
  </div>
</div>
