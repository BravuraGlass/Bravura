<h3>Section Detail
<small>List of Product Sections for Job</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <small></small>
        </div>
        <div class="panel-body">
          <% if @job.fabrication_order %>
          <table class="table table-striped table-hover responsive">
            <thead>
              <th>&nbsp;</th>            
              <% @col_count = 0 %>  
              <% @data = [] %>
              <% @header_config = [] %>
              
              <% @job.fabrication_order.rooms.each_with_index do |room,idx| %>
                
                <% room.products.each do |product| %>
                  <% @header_config << {:column => @col_count, :product_id => product.id} %>
                  <% @ps_count = product.product_sections.size %>
                  
                  <th colspan="<%= @ps_count %>"><%= product.name_with_section_count %></th>
                  <% @col_count += @ps_count %>
                <% end %>
                 
              <% end %>    
            </thead>
            <tbody>
              <% @job.product_detail.each_with_index do |row,idx1| %>
                <tr>
                  <% row.each_with_index do |val,idx2| %>
                    <td><%= val %></td>
                  <% end %>  
                </tr>
              <% end %> 
            </tbody>
          </table> 
  
          <% end %>          
        </div>
      </div>
    </div>
  </div>
</div>
