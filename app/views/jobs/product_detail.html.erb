<h3>Section Detail
<small>List of Product Sections for Job</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <small></small>
        </div>
        <div class="panel-body">
          <% if @job.fabrication_order %>
          <table class="table table-striped table-hover responsive">
            <thead>
              <th>&nbsp;</th>            
              <% @arr_products = @job.products_group %>
              <% @arr_products.each do |arr_prod| %>
                <th colspan="<%= arr_prod[:max_col] %>"><%= "#{arr_prod[:name]}" %></th>
              <% end %>  
            </thead>
            <tbody>
              <% @job.product_detail.each_with_index do |row,idx1| %>
                <tr>
                  <% row.each_with_index do |val,idx2| %>
                    <td><%= val %></td>
                  <% end %>  
                </tr>
              <% end %> 
            </tbody>
          </table> 
  
          <% end %>          
        </div>
      </div>
    </div>
  </div>
</div>
