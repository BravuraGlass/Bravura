<h3>Section Detail
<small>List of Product Sections for Job</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <small></small>
        </div>
        <div class="panel-body">
          <% if @job.fabrication_order %>
          <table class="table table-striped table-hover responsive">
            <thead>
              <th>&nbsp;</th>            
              <% @job.products_group.each_with_index do |arr_prod,idx| %>          
                <th colspan="<%= arr_prod[:max_col] %>" class="<%= column_color(idx+1) %>"><%= "#{arr_prod[:name]}" %></th>
              <% end %>  
            </thead>
            <tbody>
              <% @job.product_detail.each do |row| %>
                <tr>
                  <% row.each do |val| %>
                    <td class="<%= column_color(val[:prod_count]) %>"><%= val[:content] %></td>
                  <% end %>  
                </tr>
              <% end %> 
            </tbody>
          </table> 
  
          <% end %>          
        </div>
      </div>
    </div>
  </div>
</div>
