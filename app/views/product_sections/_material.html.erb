<div id="materialModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
  <div class="modal-dialog big">
      <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-label="Close" class="close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 id="myModalLabel" class="modal-title">Size Info for <%= @product_section.name %></h4>
        </div>
        <div class="modal-body">
            <%= render "form_size" %>
        </div>
      </div>
  </div>
</div>
