<h3>Product Types
   <small>List of existing product_types</small>
</h3>
<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <small></small>
            </div>
            <div class="panel-body">
               <table class="datatable table table-striped table-hover responsive">
                  <thead>
                    <tr>
                                            <th class="sort-alpha">Name</th>
                                            <th class="sort-alpha">Description</th>
                                            <th class="no-sort">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                     <% @product_types.each do |product_type| %>
                        <tr>
                                                    <td><%= product_type.name %></td>
                                                    <td><%= product_type.description %></td>
                                                    <td>
                            <%= link_to 'Show',
                                        product_type_path(product_type), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Edit',
                                        edit_product_type_path(product_type), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Delete',
                                        product_type_path(product_type),
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure you want to delete the product_type?' },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>


<%= link_to 'New Product Type',
            new_product_type_path,
            :class => 'btn btn-primary' %>
