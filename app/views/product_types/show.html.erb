<% %>
  <div class="page-header">
    <h1>
      Product Types
    </h1>
  </div>
  <h3>
    <small>View product_type details</small>
  </h3>
  <div>
    <ul class="nav nav-pills">
      <li role="presentation" class="active"><a data-toggle="pill" href="#general">General Information</a></li>
      <li role="presentation"><a data-toggle="pill" href="#audit">Audit</a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="general">
        <div class="row">
          <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
              <!-- START panel-->
              <div class="panel panel-default">
                <div class="panel-heading"></div>
                <div class="panel-body">
                  <%= render :partial => 'form', locals: {readonly: true},  product_type: @product_type %>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="action-buttons">
    <%= link_to 'Back',  product_types_path, :class => 'btn btn-default'  %>
      <%= link_to 'Edit', edit_product_type_path(@product_type), :class => 'btn btn-default' %>
        <%= link_to 'Destroy', product_type_path(@product_type),
          :method => 'delete',
          :data => { :confirm => 'Are you sure you want to delete the Product Type' },
          :class => 'btn btn-danger' %>
  </div>
