<% readonly ||= false %>

<!-- START row-->
<div class="row">
   <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-heading"></div>
         <div class="panel-body">
            <%= form_for @product, :url => fabrication_order_room_product_path, :html => { :class => "product", :role => 'form' } do |f| %>
              <% if @product.errors.any? %>
              <div id="error_expl" class="panel panel-danger">
                <div class="panel-heading">
                  <h3 class="panel-title"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h3>
                </div>
                <div class="panel-body">
                  <ul>
                  <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              </div>
              <% end %>
              <%= render :partial => 'shared/flash_messages' %>

                <div class="form-group">
                  <%= f.label :product_type_id %>
                  <%= collection_select :product_type_id, :product_type_id, @product_types, :id, :name, { include_blank: false } , { class: 'form-control select-bootstrap', :readonly => readonly }  %>
                </div>

                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, :class => 'form-control', id: :product_name, :readonly => readonly %>
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, :class => 'form-control', id: :product_description, :readonly => readonly %>
                </div>
                <!-- <div class="form-group">
                  <%= f.label :status %>
                  <%= f.text_field :status, :class => 'form-control', id: :product_status, :readonly => readonly %>
                </div> -->
                <div class="form-group">
                  <%= f.label :sku %>
                  <%= f.text_field :sku, :class => 'form-control', id: :product_sku, :readonly => readonly %>
                </div>
                <div class="form-group">
                  <%= f.label :price %>
                  <%= f.number_field :price, :class => 'form-control', id: :product_price, :readonly => readonly %>
                </div>
                <div class="actions <%= 'hide' if readonly %>">
                  <%= f.submit nil, :class => 'btn btn-primary' %>
                  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                       edit_fabrication_order_path(params[:fabrication_order_id]), :class => 'btn btn-default' %>
            </div>
          <% end %>
         </div>
      </div>
   </div>
</div>
