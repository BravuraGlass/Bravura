<h3>Customers
  <small>List of existing customer</small>
</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <small></small>
        </div>
        <div class="panel-body">
          <table class="datatable table table-striped table-hover responsive">
            <thead>
              <tr>
                <th class="sort-alpha">Name</th>
                <th class="sort-alpha">Last Name</th>
                <th class="sort-alpha">Address</th>
                <th class="no-sort">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.contact_firstname %></td>
                <td><%= customer.contact_lastname %></td>
                <td><%= customer.address %></td>
                <td>
                  <%= link_to 'Show',
                  customer_path(customer), :class => 'btn btn-default btn-xs' %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
