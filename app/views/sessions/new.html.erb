<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('logo.png') %>" alt="Bravura Glass Company Logo" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">LOG IN TO CONTINUE</p>

         <%= form_tag sessions_create_path, :html => { :class => "mb-lg", :role => 'form' }  do %>
            <div class="errors_panel">
              <% if flash[:notice] %>
                <div class="notice"><%= flash[:notice] %></div>
              <% end %>
              <% if flash[:alert] %>
                <div class="alert"><%= flash[:alert] %></div>
              <% end %>
            </div>
             <div class="form-group has-feedback">
               <%= text_field_tag :email, params[:email], :class => "form-control" %>
               <span class="fa fa-envelope form-control-feedback text-muted"></span>
             </div>
             <div class="form-group has-feedback">
               <%= password_field_tag :password, '', :class => "form-control" %>
               <span class="fa fa-lock form-control-feedback text-muted"></span>
             </div>
             <div class="clearfix">
               <div class="checkbox c-checkbox pull-left mt0">
                  <label>
                     <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                     <span class="fa fa-check"></span>Remember Me</label>
               </div>
               
            </div>
             <%= submit_tag "Log in", :class => "btn btn-block btn-primary mt-lg" %>
           <% end %>
      </div>
   </div>
   <!-- END panel-->
</div>
