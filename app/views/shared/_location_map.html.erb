</div>

<script>
var markers = <%=raw @markers.to_json || '{}' %>;
var user_id = '<%=raw current_user.id %>';
var gMapMarkers = [];
var map = null;
var socket = io("<%= GEORSERVER_ADDRESS %>",{query: {uid: user_id}});
// var socket = io('http://localhost:8080', {query: {uid: user_id}});

