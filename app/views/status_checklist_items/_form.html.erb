<% readonly ||= false %>

<!-- START row-->
<div class="row">
   <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-heading"></div>
         <div class="panel-body">
            <%= form_for @status_checklist_item, :html => { :class => "status_checklist_item", :role => 'form' } do |f| %>
              <% if @status_checklist_item.errors.any? %>
              <div id="error_expl" class="panel panel-danger">
                <div class="panel-heading">
                  <h3 class="panel-title"><%= pluralize(status_checklist_item.errors.count, "error") %> prohibited this status_checklist_item from being saved:</h3>
                </div>
                <div class="panel-body">
                  <ul>
                  <% @status_checklist_item.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              </div>
              <% end %>
              <%= render :partial => 'shared/flash_messages' %>
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, :class => 'form-control', id: :status_checklist_item_title, :readonly => readonly %>
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, :class => 'form-control', id: :status_checklist_item_description, :readonly => readonly %>
                </div>
                <div class="form-group">
                  <%= f.label :status %>
                  <%= f.collection_select :status_id, @statuses, :id, :detail, { include_blank: false }, class: 'form-control select-bootstrap'  %>
                </div>
                <div class="actions <%= 'hide' if readonly %>">
                  <%= f.submit nil, :class => 'btn btn-primary' %>
                  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                          status_checklist_items_path, :class => 'btn btn-default' %>
                </div>
          <% end %>
         </div>
      </div>
   </div>
</div>
