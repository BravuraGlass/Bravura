<h3>Status Checklist Items
   <small>List of existing status_checklist_items</small>
</h3>
<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <small></small>
            </div>
            <div class="panel-body">
               <table class="datatable table table-striped table-hover responsive">
                  <thead>
                    <tr>
                        <th class="sort-alpha">Title</th>
                        <th class="sort-alpha">Description</th>
                        <th class="sort-alpha">Status</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                     <% @status_checklist_items.each do |status_checklist_item| %>
                        <tr>
                            <td><%= status_checklist_item.title %></td>
                            <td><%= status_checklist_item.description %></td>
                            <td><%= status_checklist_item.status.detail %></td>
                            <td>
                            <%= link_to 'Show',
                                        status_checklist_item_path(status_checklist_item), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Edit',
                                        edit_status_checklist_item_path(status_checklist_item, scroll: ''), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Delete',
                                        status_checklist_item_path(status_checklist_item),
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure you want to delete the status_checklist_item?' },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>


<%= link_to 'New Status Checklist Item',
            new_status_checklist_item_path,
            :class => 'btn btn-primary' %>
