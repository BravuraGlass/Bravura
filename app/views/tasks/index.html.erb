
<h3>Tasks
   <small>List of existing tasks</small>
</h3>
<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <small></small>
            </div>
            <div class="panel-body">
               <table class="datatable table table-striped table-hover responsive">
                  <thead>
                    <tr>
                                            <th class="sort-alpha">Title</th>
                                            <th class="sort-alpha">Duedate</th>
                                            <th class="sort-alpha">Description</th>
                                            <th class="no-sort">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                     <% @tasks.each do |task| %>
                        <tr>
                                                    <td><%= task.title %></td>
                                                    <td><%= task.duedate %></td>
                                                    <td><%= task.description %></td>
                                                    <td>
                            <%= link_to 'Show',
                                        task_path(task), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Edit',
                                        edit_task_path(task), :class => 'btn btn-default btn-xs' %>
                            <%= link_to 'Delete',
                                        task_path(task),
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure you want to delete the task?' },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>


<%= link_to 'New Task',
            new_task_path,
            :class => 'btn btn-primary' %>
