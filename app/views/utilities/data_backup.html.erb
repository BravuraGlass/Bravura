<% if is_admin(current_user) and (current_user.first_name.downcase.include?("kevin") or current_user.first_name.downcase.include?("adit")) %>

<h3>Data Backup
   <small>Download Backup Data</small>
</h3>

<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <small></small>
            </div>
            <div class="panel-body">
              <table class="table table-striped table-hover responsive">
                <tr>
                  <th>File</th>
                  <th>Size</th>
                  <th>Download</th>
                </tr>  
                <% @thefiles.each do |thefile| %>
                  <% if thefile.include?("sql") %>
                    <tr>
                      <td><%= thefile %></td>
                      <td><%= megabyte thefile %></td>
                      <td><%= link_to "download", download_utilities_path(file: thefile) %></td></tr>
                  <% end %>
                <% end %>
              </table>  
            </div>
         </div>
      </div>
   </div>
</div>


<% end %>





