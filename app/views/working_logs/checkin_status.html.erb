<h3>Today Checkin Status
   <small>Employee's Checkin Status</small>
</h3>

<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">

         <div class="panel panel-default">

            <div class="panel-body">
               <table class="datatable table table-striped table-hover responsive">
                  <thead>
                    <tr>
                      <th class="sort-alpha">Name</th>
                      <th class="sort-alpha">Checkin Time</th>
                      <th class="sort-alpha">Checkout Time</th>                      
                    </tr>
                  </thead>
                  <tbody>
                     
                     <% @users.each do |user| %>
                        <tr id="status-color-<%= user.id %>" class="<%= user.today_working_log[:status] %>-color">
                          <td id="user-name-<%= user.id %>"><%= user.try(:full_name) %></td>
                          <td id="checkin-time-<%= user.id %>"><%= user.today_working_log[:checkin_time] %></td>
                          <td id="checkout-time-<%= user.id %>"><%= user.today_working_log[:checkout_time] %></td>
                        </tr>
                      <% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>

