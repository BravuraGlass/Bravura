<h3>Working Logs Report
   <small>Employee's work duration</small>
</h3>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="btn-group">
        <div class="btn btn-default <%= 'active' if params[:action] == 'report' %>">
          <%= link_to "Report",report_working_logs_url %>
        </div>
        <div class="btn btn-default<%= 'active' if params[:action] == 'index' %>">
          <%= link_to "Raw Data",working_logs_url %>
        </div>  
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
            <table class="datatable table table-striped table-hover responsive">
              <thead>
                <tr>
                  <th colspan="3">
                    Week :
                    <%= select_tag "week", options_for_select(@weeks,@week) %>
                  </th>
                <tr>
                  <th class="sort-alpha">Name</th>
                  <th class="sort-alpha">Duration</th>
                  <th class="sort-alpha">Detail</th>
                </tr>
              </thead>
              <tbody>
                <% if @working_log_arr.size > 0 %>
                <% @working_log_arr.each do |wlog| %>
                  <tr>
                    <td><%= wlog[:name] %></td>
                    <td><%= time_diff wlog[:duration] %></td>
                    <td>Detail</td>  
                <% end %>
                <% else %>
                  <td colspan="3" align="center">Data is empty</center>
                <% end %>  
              </tbody>
            </table>  
        </div>     
      </div>
    </div>
  </div>
</div>        