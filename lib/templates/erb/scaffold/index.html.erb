<h3><%= plural_table_name.titleize %>
   <small>List of existing <%= plural_table_name %></small>
</h3>
<div class="container-fluid">
   <div class="row">
      <div class="col-lg-12">
         <div class="panel panel-default">
            <div class="panel-heading">
               <small></small>
            </div>
            <div class="panel-body">
               <table class="datatable table table-striped table-hover responsive">
                  <thead>
                    <tr>
                      <% attributes.reject(&:password_digest?).each do |attribute| -%>
                      <th class="sort-alpha"><%= attribute.human_name %></th>
                      <% end -%>
                      <th class="no-sort">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                     <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                        <tr>
                          <% attributes.reject(&:password_digest?).each do |attribute| -%>
                          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                          <% end -%>
                          <td>
                            <%%= link_to 'Show',
                                        <%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-default btn-xs' %>
                            <%%= link_to 'Edit',
                                        edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-default btn-xs' %>
                            <%%= link_to 'Delete',
                                        <%= singular_table_name %>_path(<%= singular_table_name %>),
                                        :method => :delete,
                                        :data => { :confirm => 'Are you sure you want to delete the <%= singular_table_name %>?' },
                                        :class => 'btn btn-xs btn-danger' %>
                          </td>
                        </tr>
                      <%% end %>
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
</div>


